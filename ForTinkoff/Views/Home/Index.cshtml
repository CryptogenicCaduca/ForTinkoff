@{
    ViewBag.Title = "URL Shortener";
}
@section scripts{
    <script src="../../Scripts/angular.min.js"></script>
    <script src="../../Modules/ShortLink.js"></script>
}

<div ng-app="ShortLinkApp" class="container">
    <br/>
    <br/>
    <input type="text" placeholder="Search Link" ng-model="searchLink"/>
    <br/>
    <div ng-controller="ShortLinkController">
        <table class="table table-striped">
            <tr ng-repeat="r in links | filter : searchLink">
                <td>{{r.Id}}<td>
                <td>{{r.InitDateTime}}<td>
                <td>{{r.Url}}<td>
                <td>{{r.ShortUrl}}<td>
                <td>{{r.Jumps}}<td>
            </tr>
        </table>
    </div>
</div>
